<%- include ("../partials/header") %>

<div class="container">

  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info1</li>
        <li class="list-group-item ">Info1</li>
        <li class="list-group-item">Info1</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img style="width:100%" class="img-fluid" src="<%= campground.image %>" alt="">
        <div class="caption-full">
          <h4 class="float-right">$100/night</h4>
          <h4><a href="#"><%= campground.name  %></a></h4>
          <p>Submitted by: <%= campground.author.username %></p>
          <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id%>/edit">Edit</a>
          <form style="display:inline" class="" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-xs btn-danger">Delete</button>
          </form>
        </div>
        </div>
<hr>
        <div class="card">
          <div class="text-right card-body">
            <a class="btn btn-success" href="/campgrounds/<%= campground._id  %>/comments/new">Add a Comment</a>
          </div>
          <% campground.comments.forEach(function(comment){ %>
            <div class="row">
              <div class="col-md-12 card-body">
              <strong><%= comment.author.username %></strong>
                <span class="pull-right">10 days ago</span>
                <p><%=comment.text%></p>
              </div>
            </div>

            <% }) %>
        </div>
    </div>

  </div>
</div>





<%- include ("../partials/footer") %>
